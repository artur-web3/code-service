# Telegram API credentials (get them at https://my.telegram.org/apps)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Phone number in international format (e.g.: +79991234567)
PHONE_NUMBER=your_phone_number_here

# Session name (optional, default 'session')
SESSION_NAME=session

# Chat number for receiving authorization code (default '42777')
CODE_CHAT_NUMBER=42777

# URL for sending code via HTTP (for CI/CD process)
WEBHOOK_URL=https://your-webhook-url.com/api/code
